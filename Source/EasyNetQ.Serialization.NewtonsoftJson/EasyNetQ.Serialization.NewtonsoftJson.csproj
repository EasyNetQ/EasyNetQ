    <PackageTags>Newtonsoft;$(PackageTags)</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\EasyNetQ\Internals\ArrayPooledMemoryStream.cs" Link="ArrayPooledMemoryStream.cs" />
