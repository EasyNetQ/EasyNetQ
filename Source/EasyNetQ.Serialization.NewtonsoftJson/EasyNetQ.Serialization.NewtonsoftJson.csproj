    <Compile Include="..\EasyNetQ\Preconditions.cs" Link="Preconditions.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EasyNetQ.Abstractions\EasyNetQ.Abstractions.csproj" />
